    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "674f123abc456def789ghijk"
          },
          "email": {
            "type": "string",
            "example": "john.doe@example.com"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "avatar": {
            "type": "string",
            "example": "https://example.com/avatars/john-doe.jpg"
          },
          "isAdmin": {
            "type": "boolean",
            "example": false
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "674f456def789abc123ghijk"
          },
          "name": {
            "type": "string",
            "example": "Tesla Model 3 Long Range 2024"
          },
          "description": {
            "type": "string",
            "example": "Electric sedan with 358 miles range, autopilot, premium interior"
          },
          "price": {
            "type": "number",
            "example": 45000
          },
          "discountPrice": {
            "type": "number",
            "example": 42000
          },
          "category": {
            "type": "string",
            "example": "674f789abc123def456ghijk"
          },
          "images": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": [
              "https://example.com/uploads/products/tesla-model3-1.jpg",
              "https://example.com/uploads/products/tesla-model3-2.jpg",
              "https://example.com/uploads/products/tesla-model3-3.jpg"
            ]
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive"],
            "example": "active"
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "674f789abc123def456ghijk"
          },
          "name": {
            "type": "string",
            "example": "SUV"
          },
          "description": {
            "type": "string",
            "example": "Sport Utility Vehicles - Perfect for families and outdoor adventures"
          },
          "status": {
            "type": "string",
            "enum": ["active", "inactive"],
            "example": "active"
          },
          "productCount": {
            "type": "number",
            "example": 15
          }
        }
      },
      "AuthTokens": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiI2NzRmMTIzYWJjNDU2ZGVmNzg5Z2hpamsiLCJpYXQiOjE3MzE1MDAwMDAsImV4cCI6MTczMTUwMzYwMH0.abcdefghijklmnopqrstuvwxyz123456"
          },
          "refreshToken": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJ1c2VySWQiOiI2NzRmMTIzYWJjNDU2ZGVmNzg5Z2hpamsiLCJpYXQiOjE3MzE1MDAwMDAsImV4cCI6MTczNDE5MjAwMH0.zyxwvutsrqponmlkjihgfedcba654321"
          },
          "expiresIn": {
            "type": "integer",
            "format": "int32",
            "example": 3600
          }
        }
      },
