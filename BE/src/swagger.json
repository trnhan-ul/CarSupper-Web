        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "674f999xyz123abc456defgh"
          },
          "userId": {
            "type": "string",
            "example": "674f123abc456def789ghijk"
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OrderItem"
