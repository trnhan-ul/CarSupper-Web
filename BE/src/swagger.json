          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "done", "cancelled"],
            "example": "pending"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "example": "2025-11-11T10:30:00.000Z"
          }
