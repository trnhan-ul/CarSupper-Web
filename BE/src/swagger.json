                  "fullName": {
                    "type": "string",
                    "example": "Jane Smith"
                  },
                  "phone": {
                    "type": "string",
                    "example": "0987654321"
                  }
                },
                "required": ["email", "password", "fullName"]
              },
              "example": {
                "email": "newuser@example.com",
                "password": "SecurePass@123",
                "fullName": "Jane Smith",
                "phone": "0987654321"
